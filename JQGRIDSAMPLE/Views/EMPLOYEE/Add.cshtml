@model JQGRIDSAMPLE.Models.MEmployeee
@{
    ViewBag.Title = "Add";
}


@using (Html.BeginForm("Add", "EMPLOYEEE", FormMethod.Post))
{
    <h2>Add</h2>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-4">
                Name
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.NAME, new { @class = "form-control" })
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
        <div class="row">
            <div class="col-md-4">
                GENDER
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.GENDER, new { @class = "form-control" })
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
        <div class="row">
            <div class="col-md-4">
            MOBILE
            </div>
            <div class="col-md-8">
                @Html.TextAreaFor(m => m.MOBILE, new { @class = "form-control" })
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
        <div class="row">
            <div class="col-md-4">
               LOCATION
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.LOCATION, new { @class = "form-control" })
            </div>
        </div>
        <div class="clearfix">&nbsp;</div>
        <div class="row">
            <div class="col-md-4">
             COUNTRY
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.COUNTRY, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

